{% extends "base.html.twig" %}
{% block title %} Liste des articles  {% endblock %}
{% block body %}
<section>
    <div class="mt-5">
        <div class="container">
            <div class="col">
                {% if articles %}
                <h4 style="color:rgb(56, 52, 52);">Liste des Articles</h4>
                <hr class="line">
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Référence</th>
                    <th>Libellé</th>
                    <th>Description</th>
                    <th>Prix d'achat</th>
                    <th>Prix de vente</th>
                    <th>Quantité disponible</th>
                    <th>Quantité vendue</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>

                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr  style="position: relative;top:0px;overflow: hidden; {{ article.qte == 0  ? 'background-color: #cb8888;':''}}">
                  <td style="position: sticky;overflow: hidden">
                      {% if article.qte == 0 %}
                      <span style="background-color: red;font-size:12px;color: white;padding-left:20px;padding-right:20px;font-weight: bold;position:absolute; top:-3px;left:-25px;margin-top:15px;margin-right:20px;margin-left:5px;transform: rotate(5.5rad);opacity:0.6;">sold out</span>
                      {% endif %}
                  <span>{{article.Ref}}</span>
                  </td>
                  <td>{{article.libelle}}</td>
                  <td>{{article.description}}</td>
                   <td>{{article.prixAchat}}</td>
                   <td>{{article.prixVente}}</td>
                   <td>{{article.qte}}</td>
                   <td>{{ article.countVente() }}  </td>
                        <td><a href="{{ path('modifier_article',{'id':article.id}) }}" style="font-size:15px;margin-left:30px;color:#595252;"><i class="fa fa-pencil"></i></a></td>
                        <td><a href="{{ path('delete_article',{'id':article.id }) }}" style="color:darkred;font-size:15px;margin-left:30px;" onclick="return confirm('Vous êtes sûr ?')"><i class="fa fa-trash"></i></a></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {% else %}
            <h4>Aucun article trouvé</h4>
                <pre>








                </pre>
            {% endif %}
        </div>
        <form action="{{ path("add_art") }}" method="get">
            <button class="button-list">Ajouter</button>
        </form>

    </div>
    </div>
    </div>
</section>
<pre>





</pre>


{% endblock %}



