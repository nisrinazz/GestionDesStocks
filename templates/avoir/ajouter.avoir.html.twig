{% extends "base.html.twig" %}
{% block title %} Ajouter un avoir  {% endblock %}
{% block body %}
    <h4 >Ajouter un Avoir</h4>
    <hr class="line">
    {% if success %}
        <div class="alert alert-success" role="alert">
            {{ success }}
        </div>
    {% endif %}

    {{ form_start(form) }}

    <div class="form-group">
        <div class="row">
            <div class="left">{{ form_row(form.vente, {'attr':{'placeholder':'Libellé','class':'form-control'},'label':false,'errors':false,'errors':false}) }}</div>
                {{ form_row(form.date,{'attr':{'placeholder':'Libellé','class':'form-control'},'label':false,'errors':false}) }}


        </div>
        <div class="row">
            <div class="left">{{ form_row(form.methode_remboursement, {'attr':{'placeholder':'mode de paiement','class':'form-control reg'},'label':false,'errors':false}) }}</div>
        </div>
    </div>
    {% if error %}
        <div class="alert alert-danger" role="alert">
            <div class="errors"> {{ error }}</div>
        </div>

    {% endif %}
    <button type="submit" class="bouton-register" >Confirmer    <i class="fa fa-cart-plus"></i></button>

    {{ form_end(form) }}
    <pre>





</pre>
{% endblock %}