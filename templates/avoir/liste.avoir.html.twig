{% extends "base.html.twig" %}
{% block title %} Liste des avoirs  {% endblock %}
{% block body %}
    <section>
        <div class="mt-5">
            <div class="container">
                <div class="col">
                    {% if avoirs %}
                    <h4 style="color:rgb(56, 52, 52);">Liste des Avoirs</h4>
                    <hr class="line">
                </div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Méthode de remboursement</th>
                        <th>Id de vente</th>
                        <th>Total de vente</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for avoir in avoirs %}
                        <tr>
                            <td>{{avoir.date | date('d-m-Y')}}</td>
                            <td>{{avoir.methodeRemboursement}}</td>
                            <td>{{avoir.vente}}</td>
                            <td>{{avoir.vente.Total}}</td>
                            <td><a href="{{path('modifier_avoir',{'id' : avoir.id})}}" style="font-size:15px;margin-left:30px;color:#595252;"><i class="fa fa-pencil"></i></a></td>
                            <td><a href="{{path('delete_avoir',{'id' : avoir.id})}}" style="color:darkred;font-size:15px;margin-left:30px;" onclick="return confirm('Vous êtes sûr ?')"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
                {% else %}
                    <h4>Aucun avoir trouvé</h4>
                    <pre>








                </pre>
                {% endif %}
            </div>
            <form action="{{ path("add_avoir") }}" method="get">
                <button class="button-list">Ajouter</button>
            </form>

        </div>
        </div>
        </div>
    </section>
    <pre>





</pre>


{% endblock %}



