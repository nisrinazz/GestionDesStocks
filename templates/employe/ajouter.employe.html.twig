{% extends "base.html.twig" %}
{% block title %} Ajouter un employe  {% endblock %}
{% block body %}
<h4 >Ajouter un Employée</h4>
<hr class="line">
{% if success %}
<div class="alert alert-success" role="alert">
    {{ success }}
</div>
{% endif %}
 {{ form_start(form) }}

    <div class="form-group">
        <div class="row">
       <div class="left">{{ form_row(form.nom, {'attr':{'placeholder':'Nom','class':'form-control'},'label':false}) }}</div>
            {{ form_row(form.prenom,{'attr':{'placeholder':'Prénom','class':'form-control'},'label':false}) }}
        </div>
        <div class="row">
            <div class="left">{{ form_row(form.username, {'attr':{'placeholder':'Username ','class':'form-control reg'},'label':false}) }}</div>
            {{ form_row(form.email, {'attr':{'placeholder':'Email','class':'form-control'},'label':false,'errors':false}) }}
        </div>
        <div class="row">
          <div class="left">{{ form_row(form.password,{'attr':{'placeholder':'Mot de passe','class':'form-control'},'label':false,'errors':false}) }}</div>
            {{ form_row(form.confirm_password,{'attr':{'placeholder':'Confirmer le mot de passe','class':'form-control'},'label':false,'errors':false}) }}
        </div>
        <div class="row">
            <div class="left">{{ form_row(form.roles, {'attr':{'placeholder':'Role','class':'form-control'},'label':false}) }}</div>
        </div>

    </div>
{% if form_errors(form.email) or form_errors(form.password) or form_errors(form.confirm_password)   %}
       <div class="alert alert-danger" role="alert">
           {{ form_errors(form.email,{'attr':{'class':'errors'}}) }}
           {{ form_errors(form.password,{'attr':{'class':'errors'}})}}
           {{ form_errors(form.confirm_password,{'attr':{'class':'errors'}})}}
       </div>
{% endif %}
       <button type="submit" class="bouton-register" >Ajouter    <i class="fa-solid fa-user-plus"></i></button>
           {{ form_end(form) }}
<div class="footer-dark mt-5">

 {% endblock %}